@using CiviformAi.Areas.Admin.Models

@model ProjectConfigViewModel
@{  
    Layout = "_Layout";  
}  
<h3>Project Configuration</h3>  
  
<form asp-action="Configure" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label"></label>
        <input asp-for="ProjectName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccessVersion" class="control-label"></label>
        <select asp-for="AccessVersion" class="form-control">
            <option>2007</option>
            <option>2010</option>
            <option>2013</option>
            <option>2016</option>
            <option>2019</option>
            <option>365</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AccessFile" class="control-label"></label>
        <input asp-for="AccessFile" type="file" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="EnableLogging" class="form-check-input" />
        <label asp-for="EnableLogging" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Start Project</button>
</form>
